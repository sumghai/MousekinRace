		<colorSpectrum>
			<li>(1.000, 0.843, 0.000)</li>
		</colorSpectrum>
		<maxConfigurableAtWorldCreation>3</maxConfigurableAtWorldCreation>
		<configurationListOrderPriority>21</configurationListOrderPriority>
