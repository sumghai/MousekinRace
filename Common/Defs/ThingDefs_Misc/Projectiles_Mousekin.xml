<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- Crossbow bolts -->

	<ThingDef ParentName="BaseProjectileNeolithic">
		<defName>Bolt_Mousekin_RangedWeapon_Crossbow</defName>
		<label>crossbow bolt</label>
		<graphicData>
			<texPath>Things/Projectile/Mousekin_CrossbowBolt</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Mousekin_CrossbowBolt</damageDef>
			<damageAmountBase>25</damageAmountBase>
			<stoppingPower>1.1</stoppingPower>
			<armorPenetrationBase>0.20</armorPenetrationBase>
			<speed>60</speed>
		</projectile>
	</ThingDef>

	<!-- Firecracker rockets -->

	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_Mousekin_FirecrackerRocket</defName>
		<label>firecracker rocket</label>
		<graphicData>
			<texPath>Things/Projectile/Mousekin_FirecrackerRocket</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<thingClass>Projectile_Explosive</thingClass>
		<projectile>
			<damageDef>Mousekin_GunpowderExplosion</damageDef>
			<explosionRadius>2.4</explosionRadius>
			<preExplosionSpawnThingDef>Mousekin_Filth_Gunpowder</preExplosionSpawnThingDef>
			<preExplosionSpawnChance>0.33</preExplosionSpawnChance>
			<ai_IsIncendiary>true</ai_IsIncendiary>
			<shadowSize>0.6</shadowSize>
			<speed>50</speed>
			<soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
			<soundExplode>MortarIncendiary_Explode</soundExplode>
			<soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
		</projectile>
	</ThingDef>

	<!-- Lead Ball -->

	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_Mousekin_MusketBall</defName>
		<label>lead ball</label>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>18</damageAmountBase>
			<stoppingPower>2</stoppingPower>
			<armorPenetrationBase>0.4</armorPenetrationBase>
			<speed>56</speed>
		</projectile>
		<graphicData>
			<texPath>Things/Projectile/Mousekin_MusketBall</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
	</ThingDef>
	
	<!-- Shot Pellets -->
	
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_Mousekin_BlunderbussPellets</defName>
		<label>shot pellets</label>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>30</damageAmountBase>
			<stoppingPower>3.5</stoppingPower>
			<armorPenetrationBase>0.45</armorPenetrationBase>
			<speed>56</speed>
		</projectile>
		<graphicData>
			<texPath>Things/Projectile/Mousekin_BlunderbussPellets</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
	</ThingDef>

</Defs>