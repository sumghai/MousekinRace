<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<DamageDef>
		<defName>Mousekin_CrossbowBolt</defName>
		<label>Mousekin crossbow bolt</label>
		<workerClass>DamageWorker_AddInjury</workerClass>
		<externalViolence>true</externalViolence>
		<deathMessage>{0} has been shot to death by a Mousekin crossbow bolt.</deathMessage>
		<hediff>Cut</hediff>
		<hediffSolid>Crack</hediffSolid>
		<harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
		<impactSoundType>Bullet</impactSoundType>
		<armorCategory>Sharp</armorCategory>
		<overkillPctToDestroyPart>0~0.7</overkillPctToDestroyPart>
		<isRanged>true</isRanged>
		<makesAnimalsFlee>false</makesAnimalsFlee>
	</DamageDef>

	<DamageDef ParentName="Bomb">
		<defName>Mousekin_GunpowderExplosion</defName>
		<label>mousekin gunpowder explosion</label>
		<workerClass>MousekinRace.DamageWorker_GunpowderExplosion</workerClass>
		<defaultDamage>30</defaultDamage>
		<explosionHeatEnergyPerCell>15</explosionHeatEnergyPerCell>
		<explosionCellFleck>BlastFlame</explosionCellFleck>
		<explosionColorCenter>(1, 0.7, 0.7)</explosionColorCenter>
		<explosionColorEdge>(1, 1, 0.7)</explosionColorEdge>
	</DamageDef>

</Defs>