<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- Beeswax -->
	<ThingDef ParentName="ResourceBase">
		<defName>Mousekin_Beeswax</defName>
		<label>beeswax</label>
		<description>Wax produced by honeybees from Mousekin Beehives, mainly used for crafting candles.</description>
		<graphicData>
			<texPath>Things/Items/Resources/Mousekin_Beeswax</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<MarketValue>1.5</MarketValue>
			<Mass>0.2</Mass>
			<Flammability>1.5</Flammability>
			<DeteriorationRate>2.0</DeteriorationRate>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>
	
	<!-- Saltpeter -->
	<ThingDef ParentName="ResourceBase">
		<defName>Mousekin_Saltpeter</defName>
		<label>saltpeter</label>
		<description>Also known as potassium nitrate, this off-white solid crystalline powder is obtained from underground mines or efflorescence from nitraries, and has uses ranging from food preservation and soil fertilization to medicine and gunpowder production.</description>
		<graphicData>
			<texPath>Things/Items/Resources/Mousekin_Saltpeter</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<stackLimit>150</stackLimit>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<MarketValue>1</MarketValue>
			<Mass>0.05</Mass>
			<Flammability>0.1</Flammability>
			<DeteriorationRate>2.0</DeteriorationRate>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>
	
	<!-- Sulfur -->
	<ThingDef ParentName="ResourceBase">
		<defName>Mousekin_Sulfur</defName>
		<label>sulfur</label>
		<description>A bright yellow and non-metallic crystalline chemical element typically obtained from underground mines, mainly used in medicine and gunpowder production.</description>
		<graphicData>
			<texPath>Things/Items/Resources/Mousekin_Sulfur</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Metal_Drop</soundInteract>
		<soundDrop>Metal_Drop</soundDrop>
		<stackLimit>150</stackLimit>
		<statBases>
			<MaxHitPoints>75</MaxHitPoints>
			<MarketValue>1.5</MarketValue>
			<Mass>0.05</Mass>
		</statBases>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>
	
	<!-- Wood Ash -->
	<ThingDef ParentName="ResourceBase">
		<defName>Mousekin_WoodAsh</defName>
		<label>wood ash</label>
		<description>Powdery residue remaining from the combustion of wood in fireplaces and stoves. Although normally a waste product, it can be used as an ingredient in saltpeter production.</description>
		<graphicData>
			<texPath>Things/Items/Resources/Mousekin_WoodAsh</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<statBases>
			<MaxHitPoints>20</MaxHitPoints>
			<MarketValue>0</MarketValue>
			<Mass>0.5</Mass>
			<Flammability>0.1</Flammability>
			<DeteriorationRate>2.0</DeteriorationRate>
		</statBases>
		<tradeability>None</tradeability>
		<thingCategories>
			<li>ResourcesRaw</li>
		</thingCategories>
	</ThingDef>

</Defs>