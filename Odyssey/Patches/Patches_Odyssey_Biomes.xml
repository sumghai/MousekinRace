<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<operations>
		
			<!-- Add ear rot disease incident to biomes, with chances -->
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/BiomeDef[
					defName="GlacialPlain" or
					defName="LavaField"
				]/diseases</xpath>
				<value>
					<li>
						<diseaseInc>Mousekin_Disease_EarRot</diseaseInc>
						<commonality>10</commonality>
					</li>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/BiomeDef[defName="Grasslands"]/diseases</xpath>
				<value>
					<li>
						<diseaseInc>Mousekin_Disease_EarRot</diseaseInc>
						<commonality>80</commonality>
					</li>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/BiomeDef[defName="Glowforest"]/diseases</xpath>
				<value>
					<li>
						<diseaseInc>Mousekin_Disease_EarRot</diseaseInc>
						<commonality>100</commonality>
					</li>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/BiomeDef[defName="Scarlands"]/diseases</xpath>
				<value>
					<li>
						<diseaseInc>Mousekin_Disease_EarRot</diseaseInc>
						<commonality>150</commonality>
					</li>
				</value>
			</li>
			
		</operations>
	</Operation>

</Patch>